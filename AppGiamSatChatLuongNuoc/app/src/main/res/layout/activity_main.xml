<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C9EEF1"
    tools:context=".MainActivity">
    <LinearLayout
        android:textColor="#f6f6f2"
        android:background="#C9EEF1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="match_parent">
            <ImageView
                android:background="@drawable/logo"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/imgViewID"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center" />
            <TextView
                android:gravity="center"

                android:textColor="#000000"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="15dp"
                android:text="2017 - 2021"
                android:id="@+id/nam" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="23dp"
                android:gravity="center"
                android:text="Thiết Kế Hê Thống Giám Sát Môi Trường"
                android:textColor="#F40707"
                android:textSize="13dp" />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="13dp"
                android:text="Hồ Nuôi Thủy Sản"
                android:textColor="#F40707" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Tên sinh viên: Tô Thái Sơn"
                android:textColor="#000000" />

            <TextView

                android:id="@+id/txtmasv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Mã sinh viên: 10117418"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtGV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Giáo viên hướng dẫn: Chu Bá Thành"
                android:textColor="#000000" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:textColor="#08F312"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp">

        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/txt"
            android:text="Giá trị độ đục của nước"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtddn"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="00"
            android:textColor="#000000" />

        <TextView

            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="NTU"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout

        android:textColor="#08F312"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp">
        <TextView

            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:text="Giá trị nhiệt độ nước"
            android:layout_width="170dp"
            android:background="@drawable/txt"
            android:layout_height="wrap_content" />

        <TextView

            android:id="@+id/txtndn"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="00"
            android:textColor="#000000" />
        <TextView


            android:textColor="#000000"
            android:layout_marginLeft="30dp"
            android:text="°C"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:textColor="#08F312"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="30dp">
        <TextView
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:text="Giá trị độ mặn của nước"
            android:layout_width="170dp"
            android:background="@drawable/txt"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtdmn"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="00"
            android:textColor="#000000" />

        <TextView

            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="S‰"
            android:textColor="#000000" />
    </LinearLayout>


</LinearLayout>
